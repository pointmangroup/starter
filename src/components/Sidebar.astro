<div
  x-data="{ sidebarIsOpen: false }"
  x-on:click.outside="sidebarIsOpen = false"
  x-on:keydown.esc.window="sidebarIsOpen = false"
>
  <!-- toggle button -->
  <button
    class="bg-primary text-on-primary focus-visible:outline-primary dark:bg-primary-dark dark:text-on-primary-dark dark:focus-visible:outline-primary-dark fixed right-4 bottom-4 z-10 rounded-full p-4 focus-visible:outline-2 focus-visible:outline-offset-2 active:outline-offset-0"
    x-on:click="sidebarIsOpen = ! sidebarIsOpen"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      stroke="currentColor"
      fill="none"
      stroke-width="1.5"
      class="size-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
      ></path>
    </svg>
    <span class="sr-only">sidenav toggle</span>
  </button>

